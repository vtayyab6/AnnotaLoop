{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:window:allow-set-theme",
    "core:path:default",
    "http:default",
    "fs:default",
    "fs:allow-app-write",
    "fs:allow-app-read",
    "fs:allow-resource-read-recursive",
    "fs:read-all",
    "fs:write-all",
    "fs:scope-home-recursive",
    "fs:scope-appdata-recursive",
    "fs:scope-resource-recursive",
    "dialog:default",
    "dialog:allow-save",
    "dialog:allow-open",
    "shell:allow-open",
    {
      "identifier": "http:allow-fetch",
      "allow": [
        {
          "url": "https://*"
        },
        {
          "url": "http://localhost:*"
        },
        {
          "url": "http://127.0.0.1:*"
        }
      ]
    }
  ]
}